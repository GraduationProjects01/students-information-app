<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorDefaultBackground</item>
        <item name="android:fontFamily">@font/merriweather_regular</item>
    </style>

    <style name="login_edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical" tools:targetApi="o">@dimen/edit_text_vertical_padding</item>
        <item name="android:paddingStart">@dimen/edit_text_icon_padding</item>
        <item name="android:textSize">@dimen/login_edit_text_size</item>
        <item name="android:drawablePadding">@dimen/loginDrawablePadding</item>
        <item name="android:background">@drawable/bg_login_edit_text</item>
        <item name="android:elevation">@dimen/login_edit_text_elevation</item>
        <item name="fontFamily">@font/merriweather_regular</item>
        <item name="android:paddingEnd">@dimen/login_edit_text_error_padding</item>
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@color/colorPrimaryDark</item>
        <item name="android:outlineAmbientShadowColor" tools:targetApi="p">@color/colorPrimaryDark</item>
    </style>

    <style name="authentication_btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_right</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:elevation">12dp</item>
        <item name="android:enabled">true</item>
        <item name="android:outlineAmbientShadowColor" tools:targetApi="p">@color/colorPrimaryDark</item>
        <item name="android:outlineProvider">background</item>
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@color/colorPrimaryDark</item>
        <item name="android:paddingStart">28dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/firasans_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="authenticationTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">@color/colorShadow</item>
        <item name="android:shadowDy">12</item>
        <item name="android:shadowRadius">16</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">48sp</item>
        <item name="fontFamily">@font/lemon_regular</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="page_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/page_title_size</item>
        <item name="android:fontFamily">@font/lemon_regular</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="filterSectionTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
    </style>


</resources>
